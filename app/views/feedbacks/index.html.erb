<p id="notice"><%= notice %></p>

<h1>Listing Feedbacks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Opinion</th>
      <th>User</th>
      <th>Sent at</th>
      <th>Bus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.content %></td>
        <td><%= feedback.latitude %></td>
        <td><%= feedback.longitude %></td>
        <td><%= feedback.opinion %></td>
        <td><%= feedback.user %></td>
        <td><%= feedback.sent_at %></td>
        <td><%= feedback.bus %></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feedback', new_feedback_path %>
